#include <stdio.h>  // inclusão da biblioteca padrão de entrada e saída

int main() {  // função principal do programa

  char nome[50];  // declaração da variável para o nome
  int idade;  // declaração da variável para a idade

  printf("Digite o seu nome: ");  // mensagem para o usuário
  fgets(nome, 50, stdin);  // leitura do nome

  printf("Digite a sua idade: ");  // mensagem para o usuário
  scanf("%d", &idade);  // leitura da idade

  printf("Ola, %s!Voce tem %d anos.\n", nome, idade);  // mensagem de saudação

  return 0;  // retorno da função
}
