#include <stdio.h>  // inclusão da biblioteca padrão de entrada e saída

int main() {  // função principal do programa

  int idade;  // declaração da variável idade

  printf("Digite a idade da pessoa: ");  // mensagem para o usuário
  scanf("%d", &idade);  // leitura da idade

  if (idade >= 18) {  // verificação se a idade é maior ou igual a 18 anos
    printf("A pessoa eh maior de idade.\n");  // exibição do resultado
  } else {
    printf("A pessoa eh menor de idade.\n");  // exibição do resultado
  }

  return 0;  // retorno da função
}
